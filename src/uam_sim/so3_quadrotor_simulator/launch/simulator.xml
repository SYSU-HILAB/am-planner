<launch>
    <!-- 接收参数 -->
    <arg name="start_x"/>
    <arg name="start_y"/>
    <arg name="start_z"/>
    <arg name="scale"/>

        <!-- delta display -->
    <param name="robot_description" command="$(find xacro)/xacro $(find delta_display)/urdf/arm.xacro scale:=$(arg scale)" />
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

    <node name="display_manager" pkg="delta_display" type="display_manager" output="screen">
        <remap from="/world/quadrotor" to="/visual_slam/odom"/>
        <remap from="/position_desired" to="/pos_cmd"/>
    </node>

    <node pkg="so3_quadrotor_simulator" type="quadrotor_simulator_so3" name="quadrotor_simulator_so3" output="screen">
        <param name="rate/odom" value="200.0"/>
        <param name="simulator/init_state_x" value="$(arg start_x)"/>
        <param name="simulator/init_state_y" value="$(arg start_y)"/>
        <param name="simulator/init_state_z" value="$(arg start_z)"/>
        <remap from="~odom" to="/visual_slam/odom"/>
        <remap from="~cmd" to="/so3_control/so3_cmd"/>
        <remap from="~force_disturbance" to="force_disturbance"/>    
        <remap from="~moment_disturbance" to="moment_disturbance"/>        
    </node>
 
    <node pkg="nodelet" type="nodelet" args="standalone so3_control/SO3ControlNodelet" name="so3_control" required="true" output="screen">
        <param name="so3_control/init_state_x" value="$(arg start_x)"/>
        <param name="so3_control/init_state_y" value="$(arg start_y)"/>
        <param name="so3_control/init_state_z" value="$(arg start_z)"/>
        <remap from="~odom" to="/visual_slam/odom"/>
        <remap from="~position_cmd" to="/position_desired"/>
        <remap from="~motors" to="motors"/>
        <remap from="~corrections" to="corrections"/>
        <remap from="~so3_cmd" to="/so3_control/so3_cmd"/>
        <rosparam file="$(find so3_control)/config/gains_hummingbird.yaml"/>
        <rosparam file="$(find so3_control)/config/corrections_hummingbird.yaml"/>
        <param name="mass" value="0.98"/>
        <param name="use_angle_corrections" value="false"/>
        <param name="use_external_yaw" value="false"/>
        <param name="gains/rot/z" value="1.0"/>    
        <param name="gains/ang/z" value="0.1"/>        
    </node>

    <node pkg="traj_server" type="traj_server_node" name="traj_server" output="screen" launch-prefix="">
        <remap from="~/position_command" to="/position_desired"/>
        <remap from="~/odometry"      to="/visual_slam/odom"/>
        <remap from="~/trajectory" to="/trajectory"/>
        <param name="start_x" value="$(arg start_x)" type="double"/>
        <param name="start_y" value="$(arg start_y)" type="double"/>
        <param name="start_z" value="$(arg start_z)" type="double"/>
	</node>

</launch>
